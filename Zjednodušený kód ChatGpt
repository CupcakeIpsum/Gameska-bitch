import tkinter as tk

canvas = tk.Canvas(width=1500, height=900)
canvas.pack()

# Definícia farieb
a = '#803300'  # svetlohnedá
b = '#552200'  # tmavohnedá
c = '#502D16'  # tmavošedá
d = '#391D0C'  # čiernohnedá
e = '#784421'  # svetlošedá

# Všetky farby ako matica (riadky A-T = vrstvy, stĺpce = pixelové stĺpce)
colors = [
    [b,a,a,b,a,b,a,a,a,b,b,c,c,d,e,a,a,b,b,c],
    [a,b,c,b,a,a,c,d,b,a,d,d,c,a,b,b,a,e,d,b],
    [c,d,e,a,d,d,a,a,b,b,d,b,a,a,c,e,d,b,a,c],
    [b,b,b,a,a,c,b,b,b,a,c,e,d,b,a,d,d,e,b,a],
    [a,b,d,b,b,b,c,a,c,a,b,c,d,d,a,e,b,d,e,a],
    [b,a,c,e,a,c,a,b,a,a,d,e,a,a,b,b,b,e,d,e],
    [b,d,b,a,b,b,a,e,b,b,d,b,b,a,a,c,e,b,d,b],
    [e,b,c,d,c,b,c,d,b,a,d,b,a,c,e,b,b,d,b,c],
    [a,b,b,b,a,b,b,b,a,b,c,e,d,b,a,e,d,b,c,c],
    [b,d,c,b,c,b,e,a,b,b,a,c,b,b,e,d,a,d,e,b],
    [c,a,b,e,d,c,c,b,b,a,a,a,b,d,e,c,a,d,e,c],
    [b,a,a,c,d,a,a,b,b,e,d,a,a,b,c,d,e,a,d,a],
    [e,d,a,a,b,c,d,e,a,d,e,c,c,d,a,b,b,a,b,a],
    [c,d,a,a,b,c,a,d,b,b,c,b,a,d,e,d,c,a,c,b],
    [d,e,b,d,e,a,a,b,d,a,b,c,d,e,c,c,a,d,a,b],
    [b,b,b,a,a,e,c,d,d,a,c,b,d,a,c,d,b,b,a,d],
    [e,c,b,d,a,a,e,d,b,d,a,c,c,d,c,a,a,b,d,e],
    [e,a,a,c,a,c,d,b,b,b,e,a,d,c,e,b,b,a,a,b],
    [b,b,e,d,a,a,c,a,b,a,a,a,a,e,b,c,d,a,e,e],
    [d,e,a,a,b,c,d,e,a,c,b,d,a,c,c,b,b,a,a,b],
]

# Vykreslenie jedného bloku
def draw_block(x, y):
    for row in range(20):
        for col in range(20):
            color = colors[row][col]
            canvas.create_rectangle(x + col*3, y + row*3, x + (col+1)*3, y + (row+1)*3, fill=color, outline='')

draw_block(0, 0)
